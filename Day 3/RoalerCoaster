print("welcome to roalercoaster!")
height=int(input("what is your height in cms?"))
age=int(input("what is your age?"))
bill=0
if height>=120:
  print("You can ride the roalercoaster!")
  if(age<=12):
    bill=7
    print("Child tickets are $7")
  elif age<=18:
    bill=12
    print("Youth tickets are $12")
  elif age>=45 and age<=55:
    print("Have a free ride with us. ")
  else:
    bill=15
    print("Adult tickets are $15")
  
  photo=input("Do you want a photo? Y or N ?")
  if photo=='Y':
    bill+=3
  
  print("Your total bill is $",bill)
else:
  print("Sorry You have to grow taller to ride.")
